<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		actionBarVisible="false" xmlns:components="components.*">
	<fx:Script>
		<![CDATA[
			import model.ModelLocator;
			[Bindable]
			private var _model:ModelLocator = ModelLocator.getInstance();
			
			private function abc():void
			{
				trace(scroller);
				trace(detailGroup);
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Scroller  id="scroller" width="100%" height="100%" pageScrollingEnabled="true" scrollSnappingMode="leadingEdge" >
		<s:VGroup id="detailGroup" width="100%" >
			<components:ColorPage width="{this.width}" height="{this.height}" mouseDown="abc()" />
			<components:DetailPage width="{this.width}" height="{this.height}" />
			<components:PicturePage width="{this.width}" height="{this.height}" />
		</s:VGroup>
	</s:Scroller>
	<s:HGroup width="100" height="100%" verticalAlign="middle">
		<s:BorderContainer borderWeight="3" width="100%" height="80%">
			<s:Button label="test" click="abc()"/>
		</s:BorderContainer>
	</s:HGroup>
</s:View>
