<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" applicationDPI="160"
			   initialize="init()">
	<fx:Script>
		<![CDATA[
			import flash.utils.getTimer;
			
			import mx.events.FlexEvent;
			
			import model.ModelLocator;
			[Bindable]
			private var fps:Number;
			private var preTime:int;
			private var curTime:int;
			
			private var _model:ModelLocator=ModelLocator.getInstance();
			
			protected function init():void
			{
				Multitouch.inputMode = MultitouchInputMode.TOUCH_POINT;
				
				_model.screenWidth = this.width;
				_model.screenHeight = this.height;
				
				_model.shoeWidth = 480;
				_model.shoeHeight = 320;
				
				_model.focusDividedTouchSpeed = 1;
				
				_model.unfocusShoeSpace = _model.shoeWidth/3;
				_model.focusDividedUnfocusSpeed = 2;
				
				_model.focusShoeSpace = _model.unfocusShoeSpace*_model.focusDividedUnfocusSpeed/2;
				
				
				// TODO Auto-generated method stub
				this.addEventListener(Event.ENTER_FRAME,enterFrameHandler);
			}
			
			private function enterFrameHandler(event:Event):void
			{
				curTime = getTimer();
				fps = 1000/(curTime - preTime);
				preTime = curTime;
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:ViewNavigator width="100%" height="100%" firstView="views.ClassView" />
		
	<s:Label text="{fps.toFixed(2)} fps" x="10" y="50" />
</s:Application>
